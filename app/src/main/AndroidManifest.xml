<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edu.pk.gulehri.csquiz">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_foreground2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.ShowAnswer"
            android:theme="@style/AppTheme.MyTheme" />

        <activity android:name=".ui.AboutUs" />

        <activity
            android:name=".ui.LanguagesActivity"
            android:theme="@style/AppTheme.MyTheme" />

        <activity
            android:name=".ui.Category"
            android:theme="@style/AppTheme.MyTheme" />

        <activity
            android:name=".ui.QuizActivity"
            android:theme="@style/AppTheme.MyTheme" />

        <activity android:name=".ui.StartQuizActivity" />

        <activity android:name=".ui.SplashScreen">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>